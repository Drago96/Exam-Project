@model List<ExamProject.Models.ApplicationUser>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="well">
        <h2 class="paddedheader">Users</h2>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>
                @foreach (var user in Model)
                {
                  
                
                    if (ViewBag.Admins.Contains(user.UserName))
                    {
                            @:<tr class="info">
                    }
                    else
                    {
                            @:<tr>
                    }

                        <td>@user.Id</td>
                        <td>@user.Email</td>
                        <td>
                           @Html.ActionLink("Details", "Details", "Account", new { @name = user.Email }, null)
                           @Html.ActionLink("Edit", "Edit", "Account", new { @id = user.Id }, null)
                            @if (this.User.Identity.Name != user.Email)
                            {
                            @Html.ActionLink("Delete", "Delete", "Account", new { @id = user.Id }, null)
                            }
                        </td>
                }
                
</tbody>
        </table>
    </div>
</div>
