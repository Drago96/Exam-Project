@model ExamProject.Models.Advertisement
@{
    ViewBag.Title = "Delete";
}

<div class="container">
    <div class="well">
        <h2 class="paddedheader">Delete Advertisement</h2>
        @using (Html.BeginForm("Delete", "Advertisement", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control",@readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "7", @readonly = "readonly" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Price, new { @class = "control-label col-sm-4" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control col-sm-4", @readonly = "readonly" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.IsSold, new { @class = "col-sm-4 control-label", @readonly = "readonly" })
                
                @if (Model.IsSold == true)
                {
                    <div class="col-sm-4">
                        Yes
                    </div>
                }
                @if (Model.IsSold == false)
                {
                    <div class="col-sm-4">
                        No
                    </div>
                }

            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ImageUrl, new { @class = "col-sm-4 control-label" })
                <div class="col-sm-4">
                    @if (Model.ImageUrl != null)
                    {
                        <img src="@Url.Content(Model.ImageUrl)" alt="Image" style="height:200px;width:150px;" />
                    }
                    @if (Model.ImageUrl == null)
                    {
                        <div class="col-sm-12" style="color:red">
                            No image uploaded!
                        </div>
                    }
                </div>
            </div>



            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Index", "Advertisement", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Delete" class="btn btn-danger" />
                </div>
            </div>
        }
    </div>
</div>